{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "start": {
          "cmd": "python3 -m uvicorn service.api:app --host 0.0.0.0 --port ${PORT:-8000}"
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python3 -m uvicorn service.api:app --host 0.0.0.0 --port $PORT"
  }
}